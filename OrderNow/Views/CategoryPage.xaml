<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
        x:Class="OrderNow.Views.CategoryPage" 
        Title="{Binding Title}"
        xmlns:controls="clr-namespace:OrderNow.Controls"
        BackgroundColor="White"
        BackgroundImage="bg">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="cartIcon" Icon="cart.png" Clicked="GotoBasket_Clicked">
        </ToolbarItem>
        <ToolbarItem x:Name="cartNo">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <StackLayout>
       
  <ListView 
            x:Name="CategoryListView"
            ItemsSource="{Binding ListOfCategories}"
            IsGroupingEnabled="true"
            SeparatorVisibility="Default"
            ItemSelected="OnItemSelected"
            HasUnevenRows="true"
            SeparatorColor="#f7f7f7"
            >
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgroundColor="#f9f9f9">
                            <Label Text="{Binding Heading}"
                               TextColor="Black"
                                   FontSize="25"
                                   FontAttributes="Bold"
                                   Margin="20,10"/>
                        </StackLayout>
                       
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid VerticalOptions="FillAndExpand"
                            Margin="20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>   
                        
                            <StackLayout Grid.Column="0"
                                   HeightRequest="100">
                                 <Frame 
                                   Padding="5"
                                   BackgroundColor="White"
                                   CornerRadius="20">
                                <Image Source="logo"/>
                            </Frame>
                            </StackLayout>
                           
                            <StackLayout Grid.Column="1"
                                Spacing="5">
                                <Label Text="{Binding Text}"  TextColor="Gray"
                               FontSize="20"
                              />
                            
                             <Label Text="{Binding itemsKareem.Description}"  TextColor="Gray"
                               FontSize="20"
                              />
                            </StackLayout>
                        </Grid>
                      
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>



